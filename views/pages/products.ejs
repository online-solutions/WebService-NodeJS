<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<h1><%= title %></h1>
<p>Welcome to our test</p>
<!-- Wrapper-->
<div id="wrapper">
    <!-- PRODUCT INFO-->
    <div id="productInfo">
        <h2>PRODUCT Info</h2>
        <p><strong>_id:</strong> <span id='productInfoId'></span><br/>
            <strong>Name:</strong> <input type='text' id='productInfoName'><br/>
            <strong>Price:</strong> <input type='text' id='productInfoPrice'><br/>
            <strong>Description:</strong> <span id='productInfoDes'></span><br/>
            <strong>Location:</strong> <span id='productInfoLocation'></span><br/>
            <input type="button" id="btnUpdateProduct" value="Save" disabled>
        </p>


    </div>
    <!-- /PRODUCT INFO-->

    <!-- PRODUCT LIST-->
    <h2>Product List</h2>
    <div id="productList">
        <table>
            <thead>
            <th>Name</th>
            <th>Price</th>
            <th>Delete?</th>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!-- /PRODUCT LIST-->

    <!-- ADD PRODUCT-->
    <h2>Add Product</h2>
    <div id="addProduct">
        <fieldset>
            <input id="inputName" type="text" placeholder="Name"/>
            <input id="inputPrice" type="number" min="0" placeholder="Price"/><br/>
            <input id="inputDescription" type="text" placeholder="Description"/>
            <button id="btnAddProduct">Add Product</button>
        </fieldset>
    </div>
    <!-- /ADD PRODUCT-->

    <div id="productListAngularWrapper">
        <h2>AngularJS</h2>
        <ng-view></ng-view>

    </div>

</div>
</div>
<!-- /WRAPPER-->

<footer>
    <% include ../partials/footer %>
</footer>

<!-- Template -->
<script type="text/ng-template" id="/products.html">
    Search: <input type="text" ng-model="search.name">
    <ul>
        <li ng-repeat="product in products | filter: search">
            <input type="checkbox" ng-model="product.isActive">
            <a href="#/{{$index}}">{{product.name}}</a>
        </li>
    </ul>
</script>

<script type="text/ng-template" id="/productDetail.html">
    <h1>{{ product.name }}</h1>
    completed: <input type="checkbox" ng-model="product.isActive">
    note: <textarea>{{ product.price }}</textarea>
</script>

</body>
</html>
